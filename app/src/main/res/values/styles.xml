<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textSize">20dp</item>
    </style>

    <style name="CustomArrowBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="ListItemArrowStyle" parent="CustomArrowBase">
        <item name="android:minWidth">@dimen/taskListItemTriangleSize</item>
        <item name="android:minHeight">@dimen/taskListItemTriangleSize</item>
    </style>

    <style name="ModifyTaskListArrowStyle" parent="CustomArrowBase">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:minWidth">@dimen/taskListItemTriangleSize</item>
        <item name="android:minHeight">@dimen/taskListItemTriangleSize</item>
    </style>

    <color name="transparent">#00000000</color>
    <color name="taskArrowColor">#333333</color>
</resources>
